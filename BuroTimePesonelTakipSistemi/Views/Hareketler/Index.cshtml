@model IEnumerable<BuroTimePesonelTakipSistemi.Models.Action_tbl>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <button type="button" class="btn btn-default">  @Html.ActionLink("Hareket Ekle", "Create")</button>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" style="display: block;">

                <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <table id="datatable-buttons" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Sicil No
                                </th>
                                <th>
                                    Adı
                                </th>
                                <th>
                                    Soyadı
                                </th>
                                <th>
                                   Tarih
                                </th>
                                <th>
                                    Giriş Saati
                                </th>
                                <th>
                                    Çıkış Saati
                                </th>
                                <th>
                                    Mesai
                                </th>
                                <th>
                                    Vardiya
                                </th>
                                <th>
                                    Açıklama
                                </th>
                                <th>
                                    İşlemler
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Personel_tbl.Sicil_No)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Personel_tbl.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Personel_tbl.Surname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dater)
                                     
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Checkin_Time)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Checkout_Time)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Shift)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Job_Rotation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    @*<td>
            @Html.DisplayFor(modelItem => item.Cadre)
        </td>*@

                                    <td>
                                        @Html.ActionLink("Güncelle", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Sil", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>


                </div>
            </div>
        </div>
    </div>
</body>
</html>